#!/usr/bin/env bash
# load
apt-get update
apt-get install -y haproxy=1.6.\*
echo "
frontend 52.87.176.5
    bind 0:80
    default_backend web_servers
backend web_servers
    balance roundrobin
    server 2247-web-01 34.139.63.159
    server 2247-web-02 34.139.12.106" >> /etc/haproxy/haproxy.cfg
/etc/init.d/haproxy start
